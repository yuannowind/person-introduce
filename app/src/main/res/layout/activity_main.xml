<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_startanim"
        android:text="@string/start_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.love.introduce.view.PathAnimTextView
        android:id="@+id/patv"
        app:animTextColor="#ff0000"
        app:animTextStrokWidth="2"
        app:animTextSize="80"
        app:animSpeed="fast"
        app:animTextLineMargen="0"
        app:animText="Animation TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.love.introduce.view.PathAnimTextView
        android:id="@+id/patv2"
        app:animTextColor="#ff0000"
        app:animTextStrokWidth="2"
        app:animTextSize="80"
        app:animSpeed="fast"
        app:animText="Animation TextView"
        app:animTextLineMargen="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.love.introduce.view.PathAnimTextView
        android:id="@+id/patv3"
        app:animTextColor="#ff0000"
        app:animTextStrokWidth="2"
        app:animTextSize="80"
        app:animTextLineMargen="0"
        app:animSpeed="fast"
        app:animText="Animation TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/img_gif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/picture" />
    <com.love.introduce.view.recyclerview.SwipeCardRecyclerView
        android:id="@+id/sw_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>